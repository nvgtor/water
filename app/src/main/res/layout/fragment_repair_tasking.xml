<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/id_repair_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#C0C0C0">
        <TextView
            android:id="@+id/id_fragment_repair_1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="反应内容"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>
        <TextView
            android:id="@+id/id_fragment_repair_2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="地点"/>
        <TextView
            android:id="@+id/id_fragment_repair_3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="日期"/>
        <TextView
            android:id="@+id/id_fragment_repair_4"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="查勘人"/>
        <TextView
            android:id="@+id/id_fragment_repair_5"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="截止时间"/>
        <TextView
            android:id="@+id/id_fragment_repair_6"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="14sp"
            android:text="操作"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"/>
    </LinearLayout>

    <View
        android:id="@+id/id_repair_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_repair_ly"
        android:background="#696969" />
    <ProgressBar
        android:id="@+id/id_repair_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_repair_line"
        android:layout_weight="1">
        <com.water.nvgtor.watermanegement.view.UnPatrolLoadListview
            android:id="@+id/id_fragment_repair_task_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:divider="#A9A9A9"
            android:dividerHeight="1dp">
        </com.water.nvgtor.watermanegement.view.UnPatrolLoadListview>
    </LinearLayout>
</RelativeLayout>