<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/back_head_for_patrol"/>

    <RelativeLayout
        android:id="@+id/id_map_marker_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:layout_below="@id/id_back_rl"
        android:clickable="true"
        android:visibility="visible">

        <!-- detail-->
        <RelativeLayout
            android:id="@+id/id_patroled_detail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:background="#eee">
            <TextView
                android:id="@+id/id_patroled_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="设备ID: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_ID_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_patroled_ID"
                android:text="001"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/id_patroled_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/id_patroled_name_in"
                android:text="设备名称: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="水表0"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/id_patroled_ID"
                android:text="设备类型: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_type_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_ID_in"
                android:layout_toRightOf="@+id/id_patroled_type"
                android:text="水表"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_name"
                android:layout_toLeftOf="@+id/id_patroled_repair_in"
                android:text="维护项目: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_repair_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="表针"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_patroled_type"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="经度: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_longitude_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_type"
                android:layout_toRightOf="@+id/id_patroled_longitude"
                android:text="117.533359"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_repair"
                android:layout_toLeftOf="@+id/id_patroled_latitude_in"
                android:text="纬度: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_latitude_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_repair_in"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="39.125493"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_patroled_longitude"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="所在工程: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_project_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_longitude"
                android:layout_toRightOf="@+id/id_patroled_project"
                android:text="911"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_patroled_project"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="地址: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_address_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_project"
                android:layout_toRightOf="@+id/id_patroled_address"
                android:text="天河大道"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_patroled_address"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="备注: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patroled_remark_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_patroled_address"
                android:layout_toRightOf="@+id/id_patroled_remark"
                android:text="放马过来"
                android:textSize="12sp"/>
        </RelativeLayout>

        <View
            android:id="@+id/line_0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/id_patroled_detail_top"
            android:background="#ccc"/>

        <LinearLayout
            android:id="@+id/id_patroled_checkLY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/line_0">
            <TextView
                android:id="@+id/id_patroled_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="设备状况:"/>
            <TextView
                android:id="@+id/id_patroled_state_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:text="正常"/>
        </LinearLayout>

        <View
            android:id="@+id/line_below_ly"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/id_patroled_checkLY"
            android:background="#ccc"/>

        <!-- Exception Report -->
        <RelativeLayout
            android:id="@+id/id_patroled_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_frame"
            android:layout_below="@+id/line_below_ly">

            <RelativeLayout
                android:id="@+id/id_patroled_mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp">
                <TextView
                    android:id="@+id/id_patroled_report_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginEnd="0dp"
                    android:text="（必填）时间上报标题"
                    android:singleLine="true"
                    android:textSize="13sp"/>
                <View
                    android:id="@+id/line_s"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_below="@id/id_patroled_report_title"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line_s"
                    android:text="（必填）我是异常呀，我竟然是异常，我哪里有问题，我是异常呀我是异常呀我是异常呀我是异常呀"
                    android:minLines="2"
                    android:gravity="top"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/id_patroled_photo"
                android:layout_width="match_parent"
                android:layout_below="@+id/id_patroled_mid"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_frame_img"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/id_map_img_add_1"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/device_img_1"
                    />
                <ImageView
                    android:id="@+id/id_map_img_add_2"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/device_img_2"
                    />
                <ImageView
                    android:id="@+id/id_map_img_add_3"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/device_img_3"
                    />
                <ImageView
                    android:id="@+id/id_map_img_add_4"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/device_img_2"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_patroled_btm_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/id_patroled_photo">
                <Button
                    android:id="@+id/id_patroled_finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="录音记录"
                    android:textColor="#727272"
                    android:background="@drawable/button_recorder_normal"
                    android:minHeight="0dp"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

