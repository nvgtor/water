<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/id_patroled_item_ID"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="Ak0183"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            />
        <TextView
            android:id="@+id/id_patroled_item_name"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="A巡检点"
            />
        <TextView
            android:id="@+id/id_patroled_item_address"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="9sp"
            android:textColor="#000000"
            android:text="滨海高新区总部基地二区高新七路距海油大道20m"

            />
        <TextView
            android:id="@+id/id_patroled_item_device_num"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="4"
            />
        <Button
            android:id="@+id/id_patroled_item_btn_1"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_detail_start"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="查看"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>

</LinearLayout>