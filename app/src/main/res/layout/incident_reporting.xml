<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/id_incident_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/back_head_for_patrol"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="14sp"
                android:text="发生地点："/>
            <EditText
                android:id="@+id/id_incident_report_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="天津"
                android:singleLine="true"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="14sp"
                android:text="上报人："/>
            <EditText
                android:id="@+id/id_incident_report_man"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="苏 雪"
                android:singleLine="true"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textSize="14sp"
                android:text="反映内容："/>
            <EditText
                android:id="@+id/id_incident_report_reflectContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="天津滨海新区水厂泄露，需要紧急支援"
                android:inputType="textMultiLine"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1">
            <Button
                android:id="@+id/id_incident_camera"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_pb_add_camera"/>
            <TextView
                android:id="@+id/id_incident_tv_camera"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/id_incident_camera"
                android:text="拍照"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1">
            <Button
                android:id="@+id/id_incident_gallery"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_pb_add_pic"/>
            <TextView
                android:id="@+id/id_incident_tv_gallery"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/id_incident_gallery"
                android:text="相册"
                android:textSize="14sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:layout_weight="1">
            <com.water.nvgtor.watermanegement.view.AudioRecorderButton
                android:id="@+id/id_incident_microphone"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_pb_add_microphone"/>
            <TextView
                android:id="@+id/id_incident_tv_recorder"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:layout_below="@+id/id_incident_microphone"
                android:text="录音"
                android:textSize="14sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_incident_report_photo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:visibility="gone"
        android:background="@drawable/bg_frame_img"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_report_img_add_1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/device_img_1"/>
        <ImageView
            android:id="@+id/id_report_img_add_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/device_img_2"/>
        <ImageView
            android:id="@+id/id_report_img_add_3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/device_img_1"/>
        <ImageView
            android:id="@+id/id_report_img_add_4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/device_img_2"/>
    </LinearLayout>

    <ListView
        android:id="@+id/id_incident_recorder_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:listSelector="#00000000"
        android:cacheColorHint="#00000000"/>

    <View
        android:id="@+id/id_incident_report_line_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:background="#ccc"/>

    <LinearLayout
        android:id="@+id/id_incident_report_btm_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/id_incident_report_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="提交"
            android:textColor="#727272"
            android:background="@drawable/button_recorder_normal"
            android:minHeight="0dp"/>
    </LinearLayout>

</LinearLayout>