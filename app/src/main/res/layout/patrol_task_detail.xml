<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

        <include layout="@layout/back_head_for_patrol"/>
        <!-- detail-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="#C0C0C0">
            <TextView
                android:id="@+id/id_patrol_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="巡检类型: "
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_patrol_type_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_patrol_type"
                android:text="我是巡检类型"
                android:textSize="12sp"/>
          <TextView
                android:id="@+id/id_patrol_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_patrol_type"
                android:text="巡检名称: "
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/id_patrol_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是巡检名称"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_patrol_name"
                android:layout_below="@id/id_patrol_type"
                />
            <TextView
                android:id="@+id/id_dispatcher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指派人: "
                android:textSize="12sp"
                android:layout_below="@id/id_patrol_name"/>
            <TextView
                android:id="@+id/id_dispatcher_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨浩然"
                android:textSize="12sp"
                android:layout_below="@id/id_patrol_name"
                android:layout_toRightOf="@id/id_dispatcher_name"/>
            <TextView
                android:id="@+id/id_dispatch_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指派时间: "
                android:textSize="12sp"
                android:layout_below="@id/id_dispatcher_name"/>
            <TextView
                android:id="@+id/id_dispatch_time_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="指派2015-05-15"
                android:textSize="12sp"
                android:layout_below="@id/id_dispatcher_name"
                android:layout_toRightOf="@id/id_dispatch_time"/>
            --<TextView
                android:id="@+id/id_time_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限: "
                android:textSize="12sp"
                android:layout_below="@+id/id_dispatch_time"
                />
            <TextView
                android:id="@+id/id_time_limit_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期限2天5小时"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_time_limit"
                android:layout_below="@+id/id_dispatch_time"
                />
            <TextView
            android:id="@+id/id_patroler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="巡检人员名称: "
            android:textSize="12sp"
            android:layout_below="@+id/id_time_limit"
            />
            <TextView
                android:id="@+id/id_patroler_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巡检人查某"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_patroler_name"
                android:layout_below="@+id/id_time_limit"/>
            <TextView
                android:id="@+id/id_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间: "
                android:textSize="12sp"
                android:layout_below="@+id/id_patroler_name"/>
            <TextView
                android:id="@+id/id_start_time_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间2016-01-01"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_start_time"
                android:layout_below="@+id/id_patroler_name"/>
            <TextView
                android:id="@+id/id_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务截止时间: "
                android:textSize="12sp"
                android:layout_below="@+id/id_start_time"/>
            <TextView
                android:id="@+id/id_end_time_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止2015-11-11"
                android:textSize="12sp"
                android:layout_below="@+id/id_start_time"
                android:layout_toRightOf="@+id/id_end_time"
                />
            <TextView
                android:id="@+id/id_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巡检频率: "
                android:textSize="12sp"
                android:layout_below="@+id/id_end_time"/>
            <TextView
                android:id="@+id/id_frequency_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一周2次"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_frequency"
                android:layout_below="@+id/id_end_time"/>
            <TextView
                android:id="@+id/id_area_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区域地址: "
                android:textSize="12sp"
                android:layout_below="@+id/id_frequency"/>
            <TextView
                android:id="@+id/id_area_address_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天津"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_area_address"
                android:layout_below="@+id/id_frequency"/>
            <TextView
                android:id="@+id/id_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注: "
                android:textSize="12sp"
                android:layout_below="@id/id_area_address"/>
            <TextView
                android:id="@+id/id_remark_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我是备注"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/id_remark"
                android:layout_below="@id/id_area_address_in"/>
        </RelativeLayout>

        <!-- list head-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FF4500"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/id_detail_tab_1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="巡检点ID"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/id_detail_tab_2"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="巡检点名称"/>
            <TextView
                android:id="@+id/id_detail_tab_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="备注"/>
            <TextView
                android:id="@+id/id_detail_tab_4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="设备数量"/>
            <TextView
                android:id="@+id/id_detail_tab_5"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:text="操作"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <com.water.nvgtor.watermanegement.view.UnPatrolLoadListview
                android:id="@+id/id_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:cacheColorHint="#00000000"
                android:divider="#696969"
                android:dividerHeight="2dp">
            </com.water.nvgtor.watermanegement.view.UnPatrolLoadListview>
        </LinearLayout>

        <Button
            android:id="@+id/id_detail_task_finish"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#20B2AA"
            android:text="完成"/>



</LinearLayout>