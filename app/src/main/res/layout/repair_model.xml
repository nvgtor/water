<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <include layout="@layout/back_head_for_patrol"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_repair_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/tabbg"
        android:orientation="horizontal" >

        <com.water.nvgtor.watermanegement.view.ChangeColorIconWithTextView
            android:id="@+id/id_repair_one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icon="@drawable/tab_unpatrol"
            zhy:text="@string/repair_will"
            zhy:text_size="12sp" />

        <com.water.nvgtor.watermanegement.view.ChangeColorIconWithTextView
            android:id="@+id/id_repair_two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icon="@drawable/tab_patroled"
            zhy:text="已审核工单"
            zhy:text_size="12sp" />
        <com.water.nvgtor.watermanegement.view.ChangeColorIconWithTextView
            android:id="@+id/id_repair_three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icon="@drawable/tab_three"
            zhy:text="待审核工单"
            zhy:text_size="12sp" />
    </LinearLayout>

</LinearLayout>